{% extends 'base.html.twig' %}

{% block title %}Panier Admin{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Panier Admin</h1>

    {% if cart|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>ID Produit</th>
                    <th>Quantité</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for id, quantity in cart %}
                    <tr>
                        <td>{{ id }}</td>
                        <td>{{ quantity }}</td>
                        <td>
                            <a href="{{ path('admin_cart_add', {'id': id}) }}" class="btn btn-sm btn-success">+</a>
                            <a href="{{ path('admin_cart_remove', {'id': id}) }}" class="btn btn-sm btn-warning">-</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('admin_cart_clear') }}" class="btn btn-danger">Vider le panier</a>
        </div>
    {% else %}
        <p>Le panier est vide.</p>
    {% endif %}

    <div class="mt-4">
        <a href="#" class="btn btn-primary">Retour à la liste des produits</a>
    </div>
</div>
{% endblock %}