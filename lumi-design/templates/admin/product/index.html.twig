{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

     <a href="{{ path('admin_product_new') }}" class="btn btn-success">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Slug</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in pagination %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.slug }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.stock }}</td>
                <td>
                   <a href="{{ path('admin_product_show', {'slug': product.slug}) }}" class="btn btn-primary">show</a>
                   <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# Affichage de la pagination #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

   
{% endblock %}