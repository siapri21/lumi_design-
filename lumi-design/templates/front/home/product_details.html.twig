{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Détails du produit{% endblock %}

{% block body %}
<main class="container mt-5">
    <div class="row">
        <div class="col-md-6">
           {% if product.image %}
    <img src="{{ product.image }}" class="img-fluid" alt="{{ product.name }}">
{% else %}
    <img src="{{ asset('images/default-product.jpg') }}" class="img-fluid" alt="Image par défaut">
{% endif %}
        </div>
        <div class="col-md-6">
            <h1>{{ product.name }}</h1>
            <p class="lead"> {{ product.description }}</p>
            <p class="h3 mb-4">Prix : {{ product.price|number_format(2, ',', ' ') }} €</p>
            {% if product.stock > 0 %}
                <p class="text-success">En stock : {{ product.stock }} unité(s)</p>
            {% else %}
                <p class="text-danger">Rupture de stock</p>
            {% endif %}
            <a href="{{ path('home_index') }}" class="btn btn-secondary">Retour au catalogue</a>
             <a href="" class="btn btn-primary">Ajouter au Panier</a>
        </div>
    </div>
</main>
{% endblock %}